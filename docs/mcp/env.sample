# MCP Server Configuration - Wittwizz Digital
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# GitHub API Access
# Create at: https://github.com/settings/tokens
# Required scopes: repo (and workflow if using CI)
GITHUB_TOKEN=

# HTTP/OpenAPI Server Configuration
# Comma-separated list of allowed hosts for external API calls
# Examples: forms.example.com,api.analytics.com
HTTP_ALLOWED_HOSTS=example.org,api.example.com

# Notion Integration (Optional - Enable Later)
# Create at: https://www.notion.so/my-integrations
NOTION_API_KEY=
NOTION_DB_ID=

# Google Sheets Integration (Optional - Enable Later)
# Service account JSON or API key (read-only preferred)
GOOGLE_SERVICE_ACCOUNT_JSON=

# Project Configuration
PROJECT_NAME=Wittwizz Digital
PROJECT_OWNER=Himanshu
PROJECT_TIMEZONE=Asia/Kolkata

# Development Settings
NODE_ENV=development
DEBUG=false
